<div class="d-flex container">
  <div>
    <h3>New order:</h3>
    <%= simple_form_for @order do |f| %>
      <%= f.input :weight %>
      <%= f.input :length %>
      <%= f.input :width %>
      <%= f.input :height %>
      <%= f.input :origin %>
      <%= f.input :destination %>
      <%= f.button :submit, class: "btn-primary" %>
    <% end %>
  </div>

  <div class="flex-grow-1">
    <h1>Your orders:</h1>
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th>Origin</th>
          <th>Destination</th>
          <th>Weight</th>
          <th>Length</th>
          <th>Width</th>
          <th>Height</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.origin %></td>
            <td><%= order.destination %></td>
            <td><%= order.weight %></td>
            <td><%= order.length %></td>
            <td><%= order.width %></td>
            <td><%= order.height %></td>
            <td>â‚½<%= order.price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>


</div>
